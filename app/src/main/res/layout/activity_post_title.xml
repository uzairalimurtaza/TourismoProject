<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/first_linear"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="200dp"
            android:background="#D03939">


            <TextView
                android:id="@+id/title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Details"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginHorizontal="80dp"
                android:textSize="45sp"
                android:textColor="#fff"
                android:textStyle="italic"/>

        </LinearLayout>

        <LinearLayout

            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/first_linear"
            android:layout_margin="20dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="#C03939"
                android:drawablePadding="5dp"
                android:ems="10"
                android:text="Select Type"
                android:layout_marginTop="20sp"
                android:textColor="@color/colorNav"/>



            <Spinner

                android:id="@+id/sp_type"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_marginStart="20sp"
                android:layout_marginEnd="5sp"
                android:autofillHints="Separete Room"
                android:background="@drawable/custom_tour_edit_back"
                android:entries="@array/Type"
                android:popupBackground="@color/colorPrimary"
                android:theme="@style/mySpinnerItemStyle2"
                android:visibility="visible" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:drawablePadding="5dp"
                android:ems="10"
                android:text="Select No of rooms"
                android:layout_marginTop="20sp"
                android:textColor="@color/colorNav"/>



            <Spinner

                android:id="@+id/sp_rooms"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="5dp"
                android:autofillHints="1"
                android:background="@drawable/custom_tour_edit_back"
                android:entries="@array/Rooms"
                android:popupBackground="@color/colorPrimary"
                android:theme="@style/mySpinnerItemStyle2"
                android:visibility="visible" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="#C03939"
                android:drawablePadding="5dp"
                android:ems="10"
                android:text="Select Bath Type"
                android:layout_marginTop="20sp"
                android:textColor="@color/colorNav"/>



            <Spinner

                android:id="@+id/sp_bathType"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="5dp"
                android:autofillHints="Attached"
                android:background="@drawable/custom_tour_edit_back"
                android:entries="@array/Bathtype"
                android:popupBackground="@color/colorPrimary"
                android:theme="@style/mySpinnerItemStyle2"
                android:visibility="visible" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="#C03939"
                android:drawablePadding="5dp"
                android:layout_marginTop="20sp"
                android:ems="10"
                android:text="Select Sharing"
                android:textColor="@color/colorNav"/>


            <Spinner

                android:id="@+id/sp_sharing"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="5dp"
                android:autofillHints="Yes"
                android:background="@drawable/custom_tour_edit_back"
                android:entries="@array/sharing"
                android:popupBackground="@color/colorPrimary"
                android:theme="@style/mySpinnerItemStyle2"
                android:visibility="visible"/>

        </LinearLayout>

        <Button
            android:id="@+id/post_title_button"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="49dp"
            android:layout_marginTop="352dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/button"
            android:text="Next"
            android:textColor="#fff" />

    </RelativeLayout>


</RelativeLayout>



